    <script src="env.js"></script>
    <script src="supabase.js"></script>
    <script>
        // --- ADMIN LOGIC ---
        // ΣΗΜΕΙΩΣΗ: Σε παραγωγή, αυτό πρέπει να γίνει με Row Level Security (RLS) "Admin" role.
        // Εδώ κάνουμε απλό login check για το Demo.

        document.getElementById('admin-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const email = document.getElementById('a-email').value;
            const pass = document.getElementById('a-pass').value;

            // Χρησιμοποιούμε το κανονικό Supabase Auth
            const { data, error } = await window.db.auth.signInWithPassword({ email, password: pass });

            if (error) {
                alert("Access Denied: " + error.message);
            } else {
                // Επιτυχία
                document.getElementById('admin-login').classList.add('hidden');
                document.getElementById('dashboard').classList.remove('hidden');
                loadData();
            }
        });

        async function loadData() {
            // 1. Load Stats & Requests
            const { data: reqs } = await window.db.from('requests').select('*').order('created_at', { ascending: false }).limit(50);
            const { data: resps } = await window.db.from('responses').select('id');
            const { data: scheds } = await window.db.from('schedules').select('*');

            // Update Stats
            document.getElementById('stat-requests').innerText = reqs?.length || 0;
            document.getElementById('stat-responses').innerText = resps?.length || 0;
            document.getElementById('stat-pharmacies').innerText = scheds?.length || 0;

            // Populate Requests Table
            const reqTable = document.getElementById('requests-table');
            reqTable.innerHTML = '';
            reqs?.forEach(r => {
                const time = new Date(r.created_at).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'});
                const statusColor = r.status === 'pending' ? 'text-yellow-600 bg-yellow-100' : 'text-green-600 bg-green-100';
                reqTable.innerHTML += `
                    <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50">
                        <td class="p-3 text-slate-500 text-xs">${time}</td>
                        <td class="p-3 font-medium text-slate-800 dark:text-white">${r.medicine_name}</td>
                        <td class="p-3 text-slate-500">${r.location || '-'}</td>
                        <td class="p-3"><span class="px-2 py-1 rounded-full text-[10px] font-bold uppercase ${statusColor}">${r.status}</span></td>
                    </tr>
                `;
            });

            // Populate Schedules Table
            const schedTable = document.getElementById('schedules-table');
            schedTable.innerHTML = '';
            scheds?.forEach(s => {
                const updated = new Date(s.updated_at).toLocaleDateString();
                schedTable.innerHTML += `
                    <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50">
                        <td class="p-3 font-mono text-xs text-indigo-600 truncate max-w-[100px]">${s.pharmacist_id}</td>
                        <td class="p-3 text-xs text-slate-500">${updated}</td>
                        <td class="p-3 text-xs text-slate-400">JSON Data...</td>
                    </tr>
                `;
            });
        }

        async function logout() {
            await window.db.auth.signOut();
            window.location.reload();
        }
    </script>
</body>

            <div class="flex items-center gap-3">
                <i class="ph ph-shield-check text-2xl text-yellow-400"></i>
                <h1 class="font-bold text-xl">MediRadar <span class="font-light opacity-80">Admin</span></h1>
            </div>
            <button onclick="logout()" class="text-xs bg-indigo-800 hover:bg-indigo-700 px-3 py-1.5 rounded border border-indigo-600 transition">Έξοδος</button>
        </div>
    </nav>

    <div id="admin-login" class="fixed inset-0 z-50 bg-slate-900 flex items-center justify-center p-4">
        <div class="bg-white dark:bg-slate-800 p-8 rounded-2xl shadow-2xl w-full max-w-sm text-center">
            <div class="w-16 h-16 bg-indigo-100 text-indigo-600 rounded-full flex items-center justify-center mx-auto mb-6 text-3xl"><i class="ph ph-lock-key-open"></i></div>
            <h2 class="text-2xl font-bold mb-6 text-slate-800 dark:text-white">Admin Access</h2>
            <form id="admin-form" class="space-y-4">
                <input type="email" id="a-email" placeholder="admin@mediradar.gr" class="w-full p-3 rounded-lg border border-slate-300 dark:border-slate-600 bg-slate-50 dark:bg-slate-900 outline-none focus:border-indigo-500" required>
                <input type="password" id="a-pass" placeholder="Admin Key" class="w-full p-3 rounded-lg border border-slate-300 dark:border-slate-600 bg-slate-50 dark:bg-slate-900 outline-none focus:border-indigo-500" required>
                <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 rounded-lg transition">Είσοδος</button>
            </form>
